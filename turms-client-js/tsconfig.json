// https://www.typescriptlang.org/tsconfig
{
  "compilerOptions": {
    // project options
    "declaration": true,
    "declarationMap": true,
    "lib": [
      "dom",
      "ES2018"
    ],
    // Avoid setting to "CommonJS", or rollup won't be able to tree-shake
    "module": "ES2015",
    "outDir": "dist",
    "removeComments": true,
    "sourceMap": true,
    "target": "es5",

    // strict checks
    "strict": true,
    "strictNullChecks": false,

    // module resolution
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "moduleResolution": "Node",

    // lint checkers
    "noImplicitAny": false,

    // advanced
    "declarationDir": "dist",
    "skipLibCheck": true
  },
  "include": [
    "src/**/*"
  ]
}